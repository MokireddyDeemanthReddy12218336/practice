<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="25dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="2"
        android:rowCount="3">


        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="197dp"
            android:layout_height="112dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="You must be the change you wish to see in the world" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="213dp"
            android:layout_height="104dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Spread love everywhere you go" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="197dp"
            android:layout_height="143dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="The only thing we have to fear is fear itself." />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="210dp"
            android:layout_height="139dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="Darkness cannot drive out darkness: only light can do that" />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="197dp"
            android:layout_height="123dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Do one thing every day that scares you" />

        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="213dp"
            android:layout_height="117dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text="Well done is better than well said" />
    </GridLayout>

    <Button
        android:id="@+id/q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"/>


</LinearLayout>